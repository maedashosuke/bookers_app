<h2>New book</h2>
<%= form_with model: @book, local:true do |f| %>
  <div class="field">
    <label for="list-title">Title</label>
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <label for="list-body">Body</label>
    <%= f.text_area :body %>
  </div>
  <div class="actions">
    <%= f.submit 'Create Book' %>
  </div>
<% end %>
